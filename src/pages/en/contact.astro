---
/**
 * /en/contact - English Contact Page
 */
import BaseLayout from '../../layouts/BaseLayout.astro';
import HeaderBar from '../../components/astro/HeaderBar.jsx';
import Contact from '../../components/astro/Contact.jsx';
import Footer from '../../components/astro/Footer.jsx';
import UnderlineEffects from '../../components/astro/UnderlineEffects.jsx';
import { getI18n, type Locale } from '../../lib/i18n';

// 当前语言
const lang: Locale = 'en';

// 从内容集合获取翻译数据
const translations = await getI18n(lang);
const { site, nav, header, contact, footer } = translations;

// 当前路径用于导航高亮
const currentPath = Astro.url.pathname;
---

<BaseLayout
  title={`Contact | ${site.title}`}
  description={site.description}
  author={site.author}
  keywords={site.keywords}
  lang={lang}
>
  <HeaderBar nav={nav} header={header} currentPath={currentPath} lang={lang} client:load />

  <Contact content={{ contact }} client:load />

  <Footer footer={footer} client:load />

  <UnderlineEffects client:load />
</BaseLayout>
