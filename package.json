{
    "name": "starter-theme",
    "version": "2.0.0",
    "description": "A modern, minimalist personal landing page theme built with Astro 5, React 19 and Tailwind CSS",
    "type": "module",
    "scripts": {
        "dev": "astro dev",
        "dev:node": "NODE_OPTIONS='' astro dev",
        "build": "astro build",
        "build:node": "NODE_OPTIONS='' astro build",
        "preview": "astro preview",
        "astro": "astro",
        "fetch:rss": "bun run scripts/fetch-rss.bun.js",
        "prebuild": "bun run scripts/fetch-rss.bun.js || true",
        "test": "playwright test",
        "test:e2e": "playwright test --project=chromium",
        "test:headed": "playwright test --headed",
        "test:ui": "playwright test --ui",
        "format": "prettier --write '**/*.{js,jsx,ts,tsx,json,css,html,astro}'",
        "format:check": "prettier --check '**/*.{js,jsx,ts,tsx,json,css,html,astro}'",
        "type-check": "tsc --noEmit",
        "lint": "astro check",
        "clean": "rm -rf dist node_modules .astro",
        "reinstall": "bun run clean && bun install"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/WayneXuCN/starter-theme.git"
    },
    "keywords": [
        "astro",
        "astro-theme",
        "landing-page",
        "personal-website",
        "portfolio",
        "tailwindcss",
        "react",
        "i18n",
        "dark-mode",
        "static-site"
    ],
    "author": "Wenjie Xu <wenjie.xu.cn@outlook.com>",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/WayneXuCN/starter-theme/issues"
    },
    "homepage": "https://github.com/WayneXuCN/starter-theme#readme",
    "devDependencies": {
        "@astrojs/react": "^4.4.2",
        "@astrojs/tailwind": "^6.0.2",
        "@playwright/test": "^1.57.0",
        "@types/react": "^19.2.7",
        "@types/react-dom": "^19.2.3",
        "autoprefixer": "^10.4.22",
        "postcss": "^8.5.6",
        "prettier": "^3.6.2",
        "prettier-plugin-astro": "^0.14.1",
        "tailwindcss": "^3.4.18",
        "typescript": "^5.9.3"
    },
    "dependencies": {
        "@emailjs/browser": "^4.4.1",
        "astro": "^5.16.0",
        "prop-types": "^15.8.1",
        "react": "^19.2.0",
        "react-dom": "^19.2.0"
    }
}
