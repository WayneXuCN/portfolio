# Bun调试配置文件
# 使用方法: bun --debug .bun-debug

# 设置环境变量
process.env.NODE_ENV = 'development';
process.env.DEBUG = 'bun:*';

# 启用详细日志
console.log('Bun调试模式已启用');
console.log('Node.js环境:', process.env.NODE_ENV);
console.log('当前工作目录:', process.cwd());
console.log('Bun版本:', Bun.version);

# 性能监控
const startTime = performance.now();
process.on('exit', () => {
  const endTime = performance.now();
  console.log(`执行时间: ${endTime - startTime}ms`);
});